<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/section_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Widget ID"/>

        <TextView
           android:id="@+id/appwidget_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="right"
           android:textColor="@android:color/black"
           android:textStyle="bold"
           android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section_id"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Last Time Update"
            />

        <TextView
            android:id="@+id/appwidget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Disini"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_update_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section_update"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Last Date Update"
            />

        <TextView
            android:id="@+id/appwidget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Disini"/>


    </LinearLayout>

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/section_update_2"
        android:background="#4CAF50"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Update"
        />

</RelativeLayout>